{
  "compilerOptions": {
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "target": "es2019",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "removeComments": false
  },
  "exclude": [
    "node_modules"
  ]
}